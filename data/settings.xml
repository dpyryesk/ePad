<?xml version="1.0" encoding="utf-8"?>

<settings>
	<width>1918</width>
	<height>1078</height>
	<targetFPS>60</targetFPS>
	<locale>en</locale>
	
	<!-- Source of the touch events. Options are:
	TUIO_DEVICE		-	pure TUIO event from port 3333)
	MOUSE			-	mouse emulation
	WM_TOUCH		-	Windows Touch back end
	ANDROID			-	Android back end
	SMART			-	Smart SDK back end
	-->
	<touchSourse>MOUSE</touchSourse>
	
	<showPrintDialog>true</showPrintDialog>
	<TTSEnabled>true</TTSEnabled>
	
	<dataFolder>data\</dataFolder>
	<saveFolder>data\save\</saveFolder>
	<colouringFolder>data\colouring\</colouringFolder>
	<guiFile>gui.xml</guiFile>
	<defaultLayoutFile>layout_1080.xml</defaultLayoutFile>
	
	<!-- Common GUI settings -->
	<rotatingContainerOffsetAngle>12</rotatingContainerOffsetAngle>
	<rotatingContainerOffsetDistance>60</rotatingContainerOffsetDistance>
	<fileBrowserColumns>5</fileBrowserColumns>
	<fileBrowserRows>3</fileBrowserRows>
	<showDebugInfo>true</showDebugInfo>
	
	<!-- Prompt delays in ms -->
	<promptTTL>15000</promptTTL>
	<brushPromptDelay>60000</brushPromptDelay>
	<paintPromptDelay>30000</paintPromptDelay>
	<engagementPromptDelay>30000</engagementPromptDelay>
	<engagementPromptRepeatDelay>30000</engagementPromptRepeatDelay>
	<resetPromptDelay>300000</resetPromptDelay>
	<resetDelay>300000</resetDelay>
</settings>